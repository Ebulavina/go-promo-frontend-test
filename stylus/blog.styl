.wrapper-blog
  background: #ffffff

.blog-header
  background: url("/images/blog-bg.jpg") 0 0 no-repeat
  background-size: cover
  width: 100%
  height: 398px

.blog-menu
  margin: 80px auto
  background: #f9f9f9
  width: 1153px
  overflow: hidden

  &_clmn1
    padding: 62px
    display: inline-block
    float: left

    &_img
      width: 607px
      padding: 34px
      background: #ffffff
      display: block

    &_name1
      font-size: 27pt
      color: #000000
      font-weight: lighter
      padding: 30px 33px
      background: #ffffff

    &_name2
      color: #d3b000
      background: #ffffff
      font-weight: lighter
      font-size: 12pt
      padding-left: 33px

    &_txt
      color: #021725
      background: #ffffff
      padding: 34px 30px 74px
      width: 614px

    &_form
      padding-left: 34px
      background: #ffffff
      padding-bottom: 32px

      &_button
        border-radius: 0
        padding: 19px 56px
        background: #ffffff
        color: #000000
        font-size: 11pt
        font-weight: lighter;
        border: 1px solid #000000
        width: 194px

  &_clmn2
    width: 25%
    padding: 60px
    float: right
    padding-left: 0

    &_name
      font-size: 19pt
      font-weight: lighter
      color: #021725
      display: inline-block
      border-bottom: 3px solid #d3b000
      width: 300px
      padding-bottom: 20px
      padding-top: 61px
      margin-bottom: 42px

    &_name:first-child
      padding-top: 0

    &_txt
      font-size: 13pt
      font-weight: lighter
      color: #021725
      font-style: italic

.blog-menu_button
  text-align: center
  display: block

.wrapper-button
  width:100%;

  /* Firefox */
  display:-moz-box;
  -moz-box-pack:center;
  -moz-box-align:center;

  /* Safari and Chrome */
  display:-webkit-box;
  -webkit-box-pack:center;
  -webkit-box-align:center;

  /* W3C */
  display:box;
  box-pack:center;
  box-align:center;

.blog-button
  background: #f9f9f9
  width: 239px
  margin-bottom: 65px
