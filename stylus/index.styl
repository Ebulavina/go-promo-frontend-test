.block-indexHeader
  background: url(/images/index-bg.jpg) center center no-repeat
  width: 100%
  background-size: cover
  height: 100vh

.block-indexHeader_elem-wrapperName
  display: table-header-group
  width: 1064px
  text-align: center
  vertical-align: middle

.block-indexHeader_elem-name
  font-size: 60pt
  color: #ffffff
  font-weight: lighter
  display: inline-block

.block-indexHeader_elem-img
  display: inline-block

.block-indexAbout
  margin: 80px auto
  text-align: center
  margin-bottom: 98px
  width: 769px

.block-indexAbout_elem-name1
  font-size: 10pt
  font-weight: 600
  color: #d4af37

.block-indexAbout_elem-name2
  font-size: 35pt
  font-weight: 600
  opacity: 0.6
  color: #021725

.block-indexAbout_elem-txt
  font-size: 15pt
  font-weight: lighter
  color: #021725
  padding: 53px 0

.block-indexAbout_elem-button
  width: 255px
  background: #ffffff
  font-size: 11pt
  font-weight: lighter

.block-indexDo
  text-align: center
  width: 100%
  display: inline-block

.block-indexDo_elem-name
  opacity: 0.5
  padding-bottom: 90px

.block-indexDo_elem-img
  display: inline-block
  float: right

.block-indexDo_elem-img:nth-child(2n)
  padding: 1px 2px 1px

.block-indexDo_elem-img:nth-child(2n+1)
  padding: 1px 0px 1px 2px

.block-indexDo_elem-img:first-child
  padding-top: 90px

.block-indexWhoWeAre
  margin: 80px auto
  text-align: center
  margin-bottom: 98px
  width: 769px
  display: block

.block-info
  margin: 0px auto
  text-align: center
  margin-bottom: 98px
  width: 769px
  display: block
  float: left

.block-info_elem-wrapperInfo
  display: block
  float: left
  width: 247px
  padding-left: 2px
  padding-right: 4px

.block-info_elem-img
  display: block

.block-info_elem-bio
  background: #f9f9f9
  display: block
  // height: 235px
  text-align: left

div.block-info_elem-bio>h4.block-indexAbout_elem-name1
  padding: 21px 18px

.block-info_elem-name
  padding: 0px 18px
  font-size: 18pt
  font-weight: 600
  color: #021725
  opacity: 0.6

.block-info_elem-txt
  padding: 28px 18px 38px
  color: #021725
  opacity: 0.9
  font-size: 10pt
  font-weight: lighter
  width: 200px
